<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0; /* Remove default margin for body */
  }
  main {
    margin: 0;
    padding: 2rem;
    max-width: 65ch;
    background-color: #ffc107;
  }
  .bio-wrapper {
    font-size: 1rem;
    line-height: 1.5;
  }
  .bio-wrapper a {
    text-decoration: none;
    color: #2b6cb0;
    font-weight: 500;
  }
  button > a {
    text-decoration: none;
  }
</style>
