      title="Chelsea Avery"
      subtitle="Full Stack Developer"
      github={{
        text: "GitHub",
        href: "https://github.com/chelseaerinavery",
      }}
      blueSky={{
        text: "BlueSky",
        href: "https://bsky.app/profile/chavery.bsky.social",
      }}
      linkedIn={{
        text: "LinkedIn",
        href: "https://www.linkedin.com/in/chelseaavery/",
